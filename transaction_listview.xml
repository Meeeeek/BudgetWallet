<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/locationTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/categoryTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/locationTrans"
        android:layout_alignBottom="@+id/locationTrans"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/valueTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/categoryTrans"
        android:layout_alignBottom="@+id/categoryTrans"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="34dp"
        android:text="TextView" />
</RelativeLayout>