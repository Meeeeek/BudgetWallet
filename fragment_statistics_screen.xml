<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="michaelkim.budgetingandwalletbased.statisticsScreen">

    <!-- TODO: Update blank fragment layout -->

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/listOfStatistics"
        android:layout_width="300sp"
        android:layout_height="250dp"
        android:layout_below="@+id/largestTransStat"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/mostSpentStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/listOfStatistics"
        android:layout_below="@+id/categorySpinner"
        android:layout_marginTop="22dp"
        android:text="Category with Most Money Spent :" />

    <TextView
        android:id="@+id/frequentlyVisitedStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mostSpentStat"
        android:layout_below="@+id/mostSpentStat"
        android:layout_marginTop="10dp"
        android:text="Most Frequently Visited : " />

    <TextView
        android:id="@+id/largestTransAddedStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/frequentlyVisitedStat"
        android:layout_below="@+id/frequentlyVisitedStat"
        android:layout_marginTop="12dp"
        android:text="Largest Sum Added :" />

    <TextView
        android:id="@+id/largestTransStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/largestTransAddedStat"
        android:layout_below="@+id/largestTransAddedStat"
        android:layout_marginTop="14dp"
        android:text="Largest Transaction :" />

    <TextView
        android:id="@+id/mSS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/listOfStatistics"
        android:layout_alignTop="@+id/mostSpentStat"
        android:text="TextView" />

    <TextView
        android:id="@+id/fVS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/mSS"
        android:layout_alignTop="@+id/frequentlyVisitedStat"
        android:text="TextView" />

    <TextView
        android:id="@+id/lTAS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fVS"
        android:layout_alignTop="@+id/largestTransAddedStat"
        android:text="TextView" />

    <TextView
        android:id="@+id/lTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lTAS"
        android:layout_alignTop="@+id/largestTransStat"
        android:text="TextView" />
</RelativeLayout>
