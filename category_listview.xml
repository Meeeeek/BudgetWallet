<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/categoryNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="33dp"
        android:text="Category Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/categoryValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:text="$1000.00"
        android:layout_alignBaseline="@+id/categoryNameText"
        android:layout_alignBottom="@+id/categoryNameText"
        android:layout_toStartOf="@+id/deleteCategory" />

    <Button
        android:id="@+id/deleteCategory"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginEnd="14dp"
        android:text="delete"
        android:textSize="8sp"
        android:layout_alignBaseline="@+id/categoryValueText"
        android:layout_alignBottom="@+id/categoryValueText"
        android:layout_alignParentEnd="true" />
</RelativeLayout>